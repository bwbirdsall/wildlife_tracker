<div class="container">
  <h1>New Region</h1>

  <% if @region.errors.any? %>
    <h3>Please Fix These Errors</h3>
    <ul>
      <% @region.errors.full_messages.each do |message| %>
        <li><%= message %>
      <% end %>
    </ul>
  <% end %>

  <form action="/regions" method="post">
    <label for="region_name">Name</label>
    <input id="region_name" name="region[name]" type="text">
    <button>Create Region</button>
  </form>
</div>
